{
  "name": "@logbun/js",
  "version": "1.0.0",
  "homepage": "https://www.logbun.com",
  "main": "dist/logbun.js",
  "module": "dist/logbun.esm.js",
  "browser": "dist/logbun.js",
  "types": "dist/index.d.ts",
  "author": "Logbun",
  "description": "Logbun error reporter for browser javascript",
  "scripts": {
    "clean": "rm -fr dist",
    "build:ts": "tsc --build tsconfig.json",
    "build:rollup": "rollup -c rollup.config.mjs",
    "build:ts:watch": "tsc -p tsconfig.json --watch",
    "build:rollup:watch": "rollup -c rollup.config.mjs --watch",
    "build": "run-p clean build:ts build:rollup",
    "dev": "run-p build:ts:watch build:rollup:watch",
    "copy-to-browser-example": "rm -rf ../../examples/browser/logbun.min.js && cp ./dist/logbun.min.js ../../examples/browser/",
    "build:browser": "pnpm build && pnpm copy-to-browser-example"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:logbun/logbun-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "npm-run-all": "^4.1.5",
    "rollup": "^4.9.1",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@logbun/core": "workspace:^"
  }
}
