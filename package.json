{
  "name": "@logbun/root",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "build:deps": "pnpm turbo build --filter=root --filter=clickhouse --filter=db --filter=eslint-config --filter=tailwind-config --filter=ui --filter=utils",
    "build:sdk": "turbo build --filter=core --filter=js --filter=nextjs --filter=react --filter=upload-sourcemaps",
    "apps:dev": "turbo dev --filter='./apps/*'",
    "apps:build:www": "pnpm run build:deps --filter=www",
    "apps:build:app": "pnpm run build:deps --filter=app",
    "apps:build:api": "pnpm run build:deps --filter=api",
    "packages:publish": "turbo run build lint && changeset version && changeset publish",
    "migrate": "dotenv -- turbo --filter=db migrate",
    "clickhouse:migrate": "dotenv -- turbo --filter=clickhouse migrate",
    "db:studio": "pnpm --filter db studio",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "packageManager": "pnpm@8.13.0",
  "dependencies": {
    "@changesets/cli": "^2.27.1"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.496.0",
    "@logbun/eslint-config": "workspace:*",
    "@logbun/typescript-config": "workspace:*",
    "prettier": "^3.2.4",
    "semver": "^7.5.4",
    "turbo": "^1.11.3"
  },
  "engines": {
    "node": ">=18"
  }
}
