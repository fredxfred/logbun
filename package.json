{
  "name": "@logbun/root",
  "private": true,
  "scripts": {
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build": "turbo build",
    "dev": "turbo dev",
    "packages:build": "turbo --filter \"./packages/*\" build",
    "packages:dev": "turbo --filter \"./packages/*\" dev",
    "packages:publish": "turbo run build lint && changeset version && changeset publish",
    "api:build": "turbo --filter api build",
    "app:build": "turbo --filter app build",
    "clickhouse:migrate": "dotenv -- turbo --filter clickhouse migrate",
    "db:studio": "pnpm --filter db studio"
  },
  "packageManager": "pnpm@8.13.0",
  "dependencies": {
    "@changesets/cli": "^2.27.1"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.484.0",
    "@logbun/eslint-config": "workspace:*",
    "@logbun/typescript-config": "workspace:*",
    "prettier": "^3.1.0",
    "semver": "^7.5.4",
    "turbo": "^1.11.2"
  },
  "engines": {
    "node": ">=18"
  }
}
