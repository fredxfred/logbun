{
  "name": "@logbun/root",
  "private": true,
  "scripts": {
    "dev": "run-p dev:apps dev:sdk",
    "build": "turbo build",
    "lint": "turbo lint",
    "start:app": "turbo start --filter=app",
    "start:www": "turbo start --filter=www",
    "start:api": "turbo start --filter=api",
    "build:www": "pnpm run build:deps --filter=www",
    "build:app": "pnpm run build:deps --filter=app",
    "build:api": "pnpm run build:deps --filter=api",
    "dev:apps": "turbo dev --filter='./apps/*'",
    "dev:sdk": "turbo dev --filter=core --filter=js --filter=node --filter=nextjs --filter=react --filter=webpack --filter=upload-sourcemaps",
    "build:deps": "pnpm turbo build --filter=root --filter=clickhouse --filter=db --filter=eslint-config --filter=tailwind-config --filter=ui --filter=utils",
    "build:sdk": "turbo build --filter=core --filter=js --filter=nextjs --filter=react --filter=webpack --filter=upload-sourcemaps",
    "packages:publish": "turbo run build lint && changeset version && changeset publish",
    "migrate:db": "turbo --filter=db migrate",
    "migrate:clickhouse": "turbo --filter=clickhouse migrate",
    "db:studio": "pnpm --filter db studio",
    "open:services": "open http://localhost:2000 http://localhost:2001 http://localhost:8025 http://localhost:9001",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "packageManager": "pnpm@8.13.0",
  "dependencies": {
    "@changesets/cli": "^2.27.1"
  },
  "devDependencies": {
    "@logbun/eslint-config": "workspace:*",
    "@logbun/typescript-config": "workspace:*",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3"
  },
  "engines": {
    "node": ">=18"
  }
}
