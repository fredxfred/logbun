{
  "name": "@logbun/root",
  "private": true,
  "scripts": {
    "dev": "run-p dev:apps dev:sdk",
    "build": "turbo build",
    "lint": "turbo lint",
    "start:app": "turbo start --filter=app",
    "start:www": "turbo start --filter=www",
    "start:api": "turbo start --filter=api",
    "build:www": "turbo build --filter=www",
    "build:app": "turbo build --filter=app",
    "build:api": "turbo build --filter=api",
    "build:packages": "turbo build --filter='./packages/*' --concurrency=15",
    "dev:apps": "turbo dev --filter='./apps/*'",
    "dev:packages": "turbo dev --filter='./packages/*' --concurrency=15",
    "packages:publish": "turbo run build lint && changeset version && changeset publish",
    "migrate:db": "turbo migrate --filter=db",
    "migrate:clickhouse": "turbo migrate --filter=clickhouse",
    "open:services": "open http://localhost:2000 http://localhost:2001 http://localhost:8025 http://localhost:9001",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "packageManager": "pnpm@8.13.0",
  "dependencies": {
    "@changesets/cli": "^2.27.1"
  },
  "devDependencies": {
    "@logbun/eslint-config": "workspace:*",
    "@logbun/typescript-config": "workspace:*",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3"
  },
  "engines": {
    "node": ">=18"
  }
}
